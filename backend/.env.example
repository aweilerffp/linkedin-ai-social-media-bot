# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/social_media_poster

# Redis Configuration  
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# Server Configuration
PORT=3001
NODE_ENV=development
APP_URL=http://localhost:3001

# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_ORGANIZATION_ID=org-your-organization-id-optional

# Slack Configuration (Required for approval workflow)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token-here
SLACK_SIGNING_SECRET=your-slack-signing-secret-here
SLACK_APP_TOKEN=xapp-your-slack-app-token-optional

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
LINKEDIN_REDIRECT_URI=http://localhost:3001/auth/linkedin/callback

# Twitter/X API Configuration
TWITTER_CONSUMER_KEY=your-twitter-consumer-key
TWITTER_CONSUMER_SECRET=your-twitter-consumer-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_TOKEN_SECRET=your-twitter-access-token-secret

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-validation-secret

# Email Configuration (for notifications)
EMAIL_FROM=noreply@yourdomain.com
EMAIL_SMTP_HOST=smtp.yourdomain.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USER=your-smtp-user
EMAIL_SMTP_PASS=your-smtp-password

# File Upload Configuration
MAX_FILE_SIZE=10MB
UPLOAD_PATH=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring & Analytics
SENTRY_DSN=https://your-sentry-dsn-here
LOG_LEVEL=info

# AI Service Configuration
MAX_INSIGHTS_PER_TRANSCRIPT=10
MAX_POSTS_PER_INSIGHT=1
DEFAULT_POST_LENGTH_MIN=1500
DEFAULT_POST_LENGTH_MAX=2200
DEFAULT_READING_LEVEL=6

# Image Generation Configuration
DALLE_MODEL=dall-e-3
DALLE_IMAGE_SIZE=1792x1024
DALLE_QUALITY=standard
MAX_IMAGES_PER_POST=1

# Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_RETRY_ATTEMPTS=3
QUEUE_RETRY_DELAY=5000

# Vector Database Configuration (if using external vector DB)
VECTOR_DB_URL=http://localhost:8080
VECTOR_DB_API_KEY=your-vector-db-api-key

# Development/Testing Configuration
ENABLE_API_DOCS=true
ENABLE_TEST_ENDPOINTS=true
MOCK_EXTERNAL_APIS=false

# Cache Configuration
CACHE_TTL_COMPANY_PROFILE=604800
CACHE_TTL_KNOWLEDGE_STORES=86400
CACHE_TTL_GENERATED_CONTENT=604800
CACHE_TTL_APPROVAL_DATA=86400

# Cost Tracking
TRACK_AI_COSTS=true
MONTHLY_AI_BUDGET_LIMIT=100.00
COST_ALERT_THRESHOLD=80.00

# Performance Monitoring
ENABLE_PERFORMANCE_TRACKING=true
SLOW_QUERY_THRESHOLD_MS=1000
API_RESPONSE_TIMEOUT_MS=30000

# Security Configuration
CORS_ORIGIN=http://localhost:5173
COOKIE_SECRET=your-cookie-secret-change-in-production
SESSION_SECRET=your-session-secret-change-in-production
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_IMAGE_GENERATION=true
ENABLE_SLACK_INTEGRATION=true
ENABLE_ANALYTICS=true
ENABLE_MULTI_TENANT=true